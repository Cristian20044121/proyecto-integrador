{{#if products}}
    {{#each products}}
        <!-- Tarjeta de Producto -->
        <div class="w-full md:w-1/2 lg:w-1/4 bg-white p-6 rounded shadow mx-4 mb-4">
            <h3 class="mb-4 lg:mt-4 text-[1rem] font-mono text-gray-900 bg-clip-text text-transparent bg-gradient-to-r from-sky-950 to-blue-500 text-9xl">Juguetería Cósmica</h3>
            
            {{#if mainPhoto}}
                <div class="relative">
                    <img src="{{mainPhoto}}" alt="{{name}}" class="w-full h-48 object-cover mb-4 cursor-pointer saturate-80 hover:saturate-150 ease-in-out duration-300">
                    <img src="{{image}}" alt="{{name}}" class="w-full h-48 object-cover mb-4 cursor-pointer saturate-80 hover:saturate-150 ease-in-out duration-300 absolute top-0 left-0 opacity-0 pointer-events-none">
                </div>
            {{else}}
                <img src="{{image}}" alt="{{name}}" class="w-full h-48 object-cover mb-4 cursor-pointer saturate-80 hover:saturate-150 ease-in-out duration-300">
            {{/if}}
            
            <h2 class="text-xl font-bold mb-2">{{name}}</h2>
            <p class="text-gray-700 mb-4">{{description}}</p>
            <p class="text-gray-700 mb-4">{{longDescription}}</p>
            <span class="text-green-500 font-bold">${{price}}</span>
            <button class="block mt-4 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded buy" id="button-buy"  data-product-id="{{_id}}">
                <i class='bx bx-cart-alt text-[25px] m-2'></i>Agregar al Carrito
            </button>
        </div>
    {{/each}}
{{else}}
    <h2>No se encontraron productos</h2>
{{/if}}
